# Analytics (заполнить реальными значениями на проде)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
FACEBOOK_PIXEL_ID=XXXXXXXXXX

# CRM Integration (заполнить реальными API ключами)
FRESHA_API_KEY=your_fresha_api_key
