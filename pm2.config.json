{
  "apps": [
    {
      "name": "gomanic-brasil-landing",
      "script": "npm",
      "args": "start",
      "cwd": "./",
      "instances": "max",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000
      },
      "error_file": "./logs/error.log",
      "out_file": "./logs/out.log", 
      "log_file": "./logs/combined.log",
      "time": true,
      "watch": false,
      "ignore_watch": [
        "node_modules",
        ".next",
        "logs"
      ],
      "max_memory_restart": "1G",
      "restart_delay": 4000,
      "autorestart": true,
      "max_restarts": 10,
      "min_uptime": "10s"
    }
  ]
}
